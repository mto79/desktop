#!/usr/bin/env bash

export PATH="$HOME/.local/share/desktop/bin:$PATH"

# Set to true when going directly to a submenu, so we can exit directly
BACK_TO_EXIT=false

back_to() {
  local parent_menu="$1"

  if [[ "$BACK_TO_EXIT" == "true" ]]; then
    exit 0
  elif [[ -n "$parent_menu" ]]; then
    "$parent_menu"
  else
    show_main_menu
  fi
}

menu() {
  local prompt="$1"
  local options="$2"
  local extra="$3"
  local preselect="$4"

  read -r -a args <<<"$extra"

  if [[ -n "$preselect" ]]; then
    local index
    index=$(echo -e "$options" | grep -nxF "$preselect" | cut -d: -f1)
    if [[ -n "$index" ]]; then
      args+=("-a" "$index")
    fi
  fi

  # echo -e "$options" | walker --dmenu --theme dmenu_250 -p "$prompt…" "${args[@]}"
  echo -e "$options" | wofi --dmenu -p "$prompt…" "${args[@]}"
}

terminal() {
  alacritty --class=desktop -e "$@"
}

present_terminal() {
  desktop-launch-floating-terminal-with-presentation "$1"
}

open_in_editor() {
  notify-send "Editing config file" "$1"
  desktop-launch-editor "$1"
}

install() {
  present_terminal "echo 'Installing $1...'; sudo dnf install -y $2"
}

install_and_launch() {
  present_terminal "echo 'Installing $1...'; sudo dnf install -y $2 && setsid gtk-launch $3"
}

install_font() {
  present_terminal "echo 'Installing $1...'; sudo dnf install -y $2 && sleep 2 && desktop-font-set '$3'"
}

show_learn_menu() {
  case $(menu "Learn" "  Keybindings\n  Desktop\n  Hyprland\n  Fedora\n  Neovim") in
  *Keybindings*) desktop-menu-keybindings ;;
  *Desktop*) desktop-launch-webapp "https://github.com/mto79/desktop" ;;
  *Hyprland*) desktop-launch-webapp "https://wiki.hypr.land" ;;
  *Fedora*) desktop-launch-webapp "https://docs.fedoraproject.org" ;;
  *Neovim*) desktop-launch-webapp "https://neovim.io/doc/user/quickref.html" ;;
  *) show_main_menu ;;
  esac
}

show_trigger_menu() {
  case $(menu "Trigger" "  Capture\n󰔎  Toggle") in
  *Capture*) show_capture_menu ;;
  *Toggle*) show_toggle_menu ;;
  *) show_main_menu ;;
  esac
}

show_capture_menu() {
  case $(menu "Capture" "  Screenshot\n  Screenrecord\n󰃉  Color") in
  *Screenshot*) show_screenshot_menu ;;
  *Screenrecord*) show_screenrecord_menu ;;
  *Color*) pkill hyprpicker || hyprpicker -a ;;
  *) show_trigger_menu ;;
  esac
}

show_screenshot_menu() {
  case $(menu "Screenshot" "  Region\n  Window\n  Display") in
  *Region*) desktop-cmd-screenshot ;;
  *Window*) desktop-cmd-screenshot window ;;
  *Display*) desktop-cmd-screenshot output ;;
  *) show_capture_menu ;;
  esac
}

show_screenrecord_menu() {
  case $(menu "Screenrecord" "  Region\n  Region + Audio\n  Display\n  Display + Audio") in
  *"Region + Audio"*) desktop-cmd-screenrecord region audio ;;
  *Region*) desktop-cmd-screenrecord ;;
  *"Display + Audio"*) desktop-cmd-screenrecord output audio ;;
  *Display*) desktop-cmd-screenrecord output ;;
  *) show_capture_menu ;;
  esac
}

show_toggle_menu() {
  case $(menu "Toggle" "󱄄  Screensaver\n󰔎  Nightlight\n󱫖  Idle Lock\n󰍜  Top Bar") in
  *Screensaver*) desktop-toggle-screensaver ;;
  *Nightlight*) desktop-toggle-nightlight ;;
  *Idle*) desktop-toggle-idle ;;
  *Bar*) desktop-toggle-waybar ;;
  *) show_trigger_menu ;;
  esac
}

show_style_menu() {
  case $(menu "Style" "󰸌  Theme\n  Font\n  Background\n  Hyprland\n󱄄  Screensaver\n  About") in
  *Theme*) show_theme_menu ;;
  *Font*) show_font_menu ;;
  *Background*) desktop-theme-bg-next ;;
  *Hyprland*) open_in_editor ~/.config/hypr/looknfeel.conf ;;
  *Screensaver*) open_in_editor ~/.config/desktop/branding/screensaver.txt ;;
  *About*) open_in_editor ~/.config/desktop/branding/about.txt ;;
  *) show_main_menu ;;
  esac
}

show_theme_menu() {
  theme=$(menu "Theme" "$(desktop-theme-list)" "" "$(desktop-theme-current)")
  if [[ "$theme" == "CNCLD" || -z "$theme" ]]; then
    back_to show_style_menu
  else
    desktop-theme-set "$theme"
  fi
}

show_font_menu() {
  theme=$(menu "Font" "$(desktop-font-list)" "-w 350" "$(desktop-font-current)")
  if [[ "$theme" == "CNCLD" || -z "$theme" ]]; then
    back_to show_style_menu
  else
    desktop-font-set "$theme"
  fi
}

show_setup_menu() {
  local options="  Audio\n  Wifi\n󰂯  Bluetooth\n󱐋  Power Profile\n󰍹  Monitors"
  [ -f ~/.config/hypr/bindings.conf ] && options="$options\n  Keybindings"
  [ -f ~/.config/hypr/input.conf ] && options="$options\n󰍽  Input"
  options="$options\n  Defaults\n󰱔  DNS\n  Config"

  case $(menu "Setup" "$options") in
  *Audio*) desktop-launch-audio ;;
  *Wifi*)
    rfkill unblock wifi
    desktop-launch-wifi
    ;;
  *Bluetooth*)
    rfkill unblock bluetooth
    desktop-launch-bluetooth
    ;;
  *Power*) show_setup_power_menu ;;
  *Monitors*) open_in_editor ~/.config/hypr/monitors.conf ;;
  *Keybindings*) open_in_editor ~/.config/hypr/bindings.conf ;;
  *Input*) open_in_editor ~/.config/hypr/input.conf ;;
  *Defaults*) open_in_editor ~/.config/uwsm/default ;;
  *DNS*) present_terminal desktop-setup-dns ;;
  *Config*) show_setup_config_menu ;;
  *) show_main_menu ;;
  esac
}

show_setup_power_menu() {
  profile=$(menu "Power Profile" "$(desktop-powerprofiles-list)" "" "$(powerprofilesctl get)")

  if [[ "$profile" == "CNCLD" || -z "$profile" ]]; then
    back_to show_setup_menu
  else
    desktop-powerprofiles-set "$profile"
  fi
}

show_setup_config_menu() {
  # case $(menu "Setup" "  Hyprland\n  Hypridle\n  Hyprlock\n  Hyprsunset\n  Swayosd\n󰌧  Walker\n󰍜  Waybar\n󰞅  XCompose") in
  case $(menu "Setup" "  Hyprland\n  Hypridle\n  Hyprlock\n  Hyprsunset\n󰌧  Wofi\n󰍜  Waybar\n󰞅  XCompose") in
  *Hyprland*) open_in_editor ~/.config/hypr/hyprland.conf ;;
  *Hypridle*) open_in_editor ~/.config/hypr/hypridle.conf && desktop-restart-hypridle ;;
  *Hyprlock*) open_in_editor ~/.config/hypr/hyprlock.conf ;;
  *Hyprsunset*) open_in_editor ~/.config/hypr/hyprsunset.conf && desktop-restart-hyprsunset ;;
  # *Swayosd*) open_in_editor ~/.config/swayosd/config.toml && desktop-restart-swayosd ;;
  # *Walker*) open_in_editor ~/.config/walker/config.toml && desktop-restart-walker ;;
  *Wofi*) open_in_editor ~/.config/wofi/config && desktop-restart-wofi ;;
  *Waybar*) open_in_editor ~/.config/waybar/config.jsonc && desktop-restart-waybar ;;
  *XCompose*) open_in_editor ~/.XCompose && desktop-restart-xcompose ;;
  *) show_main_menu ;;
  esac
}

show_install_menu() {
  case $(menu "Install" "  Package\n  Web App\n  TUI\n  Style") in
  *Package*) terminal desktop-pkg-install ;;
  *Web*) present_terminal desktop-webapp-install ;;
  *TUI*) present_terminal desktop-tui-install ;;
  *Style*) show_install_style_menu ;;
  *) show_main_menu ;;
  esac
}

show_install_style_menu() {
  case $(menu "Install" "󰸌  Theme\n  Background") in
  *Theme*) present_terminal desktop-theme-install ;;
  *Background*) nautilus ~/.config/desktop/current/theme/backgrounds ;;
  *) show_install_menu ;;
  esac
}

show_remove_menu() {
  case $(menu "Remove" "  Package\n  Web App\n  TUI\n󰸌  Theme") in
  *Package*) terminal desktop-pkg-remove ;;
  *Web*) present_terminal desktop-webapp-remove ;;
  *TUI*) present_terminal desktop-tui-remove ;;
  *Theme*) present_terminal desktop-theme-remove ;;
  *) show_main_menu ;;
  esac
}

show_update_menu() {
  case $(menu "Update" "  desktop\n  Config\n󰸌  Themes\n  Process\n󰇅  Hardware\n  Password\n  Timezone") in
  *desktop*) present_terminal desktop-update ;;
  *Config*) show_update_config_menu ;;
  *Themes*) present_terminal desktop-theme-update ;;
  *Process*) show_update_process_menu ;;
  *Hardware*) show_update_hardware_menu ;;
  *Timezone*) present_terminal desktop-cmd-tzupdate ;;
  *Password*) show_update_password_menu ;;
  *) show_main_menu ;;
  esac
}

show_update_process_menu() {
  # case $(menu "Restart" "  Hypridle\n  Hyprsunset\n  Swayosd\n󰌧  Walker\n󰍜  Waybar") in
  case $(menu "Restart" "  Hypridle\n  Hyprsunset\n󰌧  Wofi\n󰍜  Waybar") in
  *Hypridle*) desktop-restart-hypridle ;;
  *Hyprsunset*) desktop-restart-hyprsunset ;;
  # *Swayosd*) desktop-restart-swayosd ;;
  # *Walker*) desktop-restart-walker ;;
  *Wofi*) desktop-restart-wofi ;;
  *Waybar*) desktop-restart-waybar ;;
  *) show_update_menu ;;
  esac
}

show_update_config_menu() {
  # case $(menu "Use default config" "  Hyprland\n  Hypridle\n  Hyprlock\n  Hyprsunset\n󱣴  Plymouth\n  Swayosd\n󰌧  Walker\n󰍜  Waybar") in
  case $(menu "Use default config" "  Hyprland\n  Hypridle\n  Hyprlock\n  Hyprsunset\n󱣴  Plymouth\n󰌧  Wofi\n󰍜  Waybar") in
  *Hyprland*) present_terminal desktop-refresh-hyprland ;;
  *Hypridle*) present_terminal desktop-refresh-hypridle ;;
  *Hyprlock*) present_terminal desktop-refresh-hyprlock ;;
  *Hyprsunset*) present_terminal desktop-refresh-hyprsunset ;;
  *Plymouth*) present_terminal desktop-refresh-plymouth ;;
  # *Swayosd*) present_terminal desktop-refresh-swayosd ;;
  # *Walker*) present_terminal desktop-refresh-walker ;;
  *Wofi*) present_terminal desktop-refresh-wofi ;;
  *Waybar*) present_terminal desktop-refresh-waybar ;;
  *) show_update_menu ;;
  esac
}

show_update_hardware_menu() {
  case $(menu "Restart" "  Audio\n󱚾  Wi-Fi\n󰂯  Bluetooth") in
  *Audio*) present_terminal desktop-restart-pipewire ;;
  *Wi-Fi*) present_terminal desktop-restart-wifi ;;
  *Bluetooth*) present_terminal desktop-restart-bluetooth ;;
  *) show_update_menu ;;
  esac
}

show_update_password_menu() {
  case $(menu "Update Password" "  Drive Encryption\n  User") in
  *Drive*) present_terminal desktop-drive-set-password ;;
  *User*) present_terminal passwd ;;
  *) show_update_menu ;;
  esac
}

show_system_menu() {
  case $(menu "System" "  Lock\n󱄄  Screensaver\n󰤄  Suspend\n  Stop\n󰜉  Reboot\n󰐥  Shutdown") in
  *Lock*) desktop-lock-screen ;;
  *Screensaver*) desktop-launch-screensaver force ;;
  *Suspend*) systemctl suspend ;;
  *Stop*) desktop-state clear relaunch-required && uwsm stop ;;
  *Reboot*) desktop-state clear re*-required && systemctl reboot ;;
  *Shutdown*) desktop-state clear re*-required && systemctl poweroff ;;
  *) back_to show_main_menu ;;
  esac
}

show_main_menu() {
  go_to_menu "$(menu "Go" "󰀻  Apps\n󰧑  Learn\n󱓞  Trigger\n  Style\n  Setup\n󰉉  Install\n󰭌  Remove\n  Update\n  About\n  System")"
}

go_to_menu() {
  case "${1,,}" in
  #*apps*) walker -p "Launch…" ;;
  *apps*) wofi --show drun -p "Launch…" ;;
  *learn*) show_learn_menu ;;
  *trigger*) show_trigger_menu ;;
  *style*) show_style_menu ;;
  *theme*) show_theme_menu ;;
  *screenshot*) show_screenshot_menu ;;
  *screenrecord*) show_screenrecord_menu ;;
  *setup*) show_setup_menu ;;
  *power*) show_setup_power_menu ;;
  *install*) show_install_menu ;;
  *remove*) show_remove_menu ;;
  *update*) show_update_menu ;;
  *about*) desktop-launch-about ;;
  *system*) show_system_menu ;;
  esac
}

if [[ -n "$1" ]]; then
  BACK_TO_EXIT=true
  pkill wofi || go_to_menu "$1"
else
  pkill wofi || show_main_menu
fi
