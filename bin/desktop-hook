#!/usr/bin/env bash

# Run a named hook, like post-update (available in ~/.config/desktop/hooks/post-update).

set -e

if [[ $# -lt 1 ]]; then
  echo "Usage: desktop-hook [name] [args...]"
  exit 1
fi

HOOK=$1
HOOK_PATH="$HOME/.config/desktop/hooks/$HOOK"
shift

if [[ -f $HOOK_PATH ]]; then
  bash "$HOOK_PATH" "$@"
fi

