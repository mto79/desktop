# Changes require a relaunch of Hyprland to take effect.

# Ensure Desktop bins are in the path
export DESKTOP_PATH=$HOME/.local/share/desktop
export PATH=$DESKTOP_PATH/bin/:$PATH

# Set default terminal and editor
source ~/.config/uwsm/default

# Activate mise if present on the system
desktop-cmd-present mise && eval "$(mise activate bash)"

# Update user dirs
desktop-cmd-present xdg-user-dirs-update && xdg-user-dirs-update --quiet
